{
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "Node16",
        "target": "ES2022",
        "sourceMap": true,
        "types": ["node"],

        "baseUrl": "./",
        "outDir": "../dist",

        "paths": {
            "@/*": ["./*"]
        },

        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    }
}
